<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按下样式 -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="#EBEBEB" />
        </shape>
