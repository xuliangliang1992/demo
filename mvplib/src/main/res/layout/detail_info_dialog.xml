<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="信息确认"
                android:textColor="@color/base_black_2"
                android:textSize="@dimen/x30" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:layout_marginTop="@dimen/x26"
                android:background="@color/base_divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y130"
                android:layout_marginLeft="@dimen/x82"
                android:layout_marginTop="@dimen/x26"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="@dimen/x100"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="姓    名"
                        android:textColor="@color/base_black_6"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x26"
                        android:gravity="left"
                        android:textColor="@color/base_black_2"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneNo"
                        android:layout_width="@dimen/x100"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="手机号"
                        android:textColor="@color/base_black_6"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/tv_phoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x26"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textColor="@color/base_black_2"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/IdCard"
                        android:layout_width="@dimen/x100"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:text="身份证"
                        android:textColor="@color/base_black_6"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/tv_IdCard"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x26"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/base_black_2"
                        android:textSize="@dimen/x28" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_tipMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y20"
                android:layout_marginBottom="@dimen/x10"
                android:text="提示：请核对您的信息后再点击下一步"
                android:textColor="@color/orange"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/base_divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y88"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/base_blue"
                android:textSize="@dimen/x28" />

            <View
                android:id="@+id/dialog_divider"
                android:layout_width="@dimen/x2"
                android:layout_height="match_parent"
                android:background="@color/base_divider_color" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_bg"
                android:clickable="true"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/base_blue"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>